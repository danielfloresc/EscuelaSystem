@page
@model EscuelaSystem.Web.Pages.CrearAlumnoModel
@{
}
<form method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label asp-for="Alumno.Carnet"></label>
        <input type="text" class="form-control" asp-for="Alumno.Carnet" placeholder="Ingrese un codigo de materia">
        <span class="text-danger" asp-validation-for="Alumno.Carnet"></span>
    </div>
    <div class="form-group">
        <label asp-for="Alumno.Nombre"></label>
        <input type="text" class="form-control" asp-for="Alumno.Nombre" placeholder="Ingrese una descripcion de materia">
        <span class="text-danger" asp-validation-for="Alumno.Nombre"></span>
    </div>
    <div class="form-group">
        <label asp-for="Alumno.Registro"></label>
        <input type="checkbox" class="form-control" asp-for="Alumno.Registro">
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button> <br />
    <a asp-page="/Alumnos">Regresar a Alumnos</a>
</form>
