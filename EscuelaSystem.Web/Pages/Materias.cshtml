@page
@model EscuelaSystem.Web.Pages.MateriasModel
@{ }

<h1>Listado de Materias</h1>
<a class="btn btn-sm btn-success" asp-page="/CrearMateria">Crear a Materia</a>
<br />
<br />
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Codigo</th>
            <th>Nombre</th>
            <th>Habilitada</th>
            <th>Opciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Materias)
        {
<tr>
    <td>@item.Id</td>
    <td>@item.Codigo</td>
    <td>@item.Descripcion</td>
    <td>
        @if (item.Habilitada)
        {
<p>SI</p> }
                else
                {
<p>NO</p>                }
    </td>
    <td>
        <a class="btn btn-sm btn-info" asp-area="" asp-page="/EditarMateria" aps-route-id="@item.Id">Editar</a>
    </td>
</tr>}

    </tbody>
</table>