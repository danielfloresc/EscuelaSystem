@page
@model EscuelaSystem.Web.Pages.AlumnoModel
@{

}
<h1>Listado de Alumno</h1>
<a class="btn btn-sm btn-success" asp-page="/CrearAlumno">Registrar Alumno</a>
<br />
<br />
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Carnet</th>
            <th>Nombre</th>
            <th>Registro</th>
            <th>Opciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Alumnos)
        {
<tr>
    <td>@item.Id</td>
    <td>@item.Carnet</td>
    <td>@item.Nombre</td>
    <td>
        @if (item.Registro)
        {
<p>SI</p> }
else
{
<p>NO</p>       }
    </td>
    <td>
        <a class="btn btn-sm btn-info" asp-area="" asp-page="/EditarAlumno" asp-route-id="@item.Id">Editar</a>
        <a class="btn btn-sm btn-danger" asp-area="" asp-page="/EliminarAlumno" asp-route-id="@item.Id">Eliminar</a>
    </td>
</tr>
}

    </tbody>
</table>

